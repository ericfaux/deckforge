{
  "buildCommand": "cd webapp && npm run build",
  "outputDirectory": "webapp/dist",
  "installCommand": "npm install && cd backend && npm install && cd ../webapp && npm install",
  "functions": {
    "api/[...route].mts": {
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...route]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
